<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/vang">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageButton
            android:id="@+id/main_btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_back"
            >
        </ImageButton>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lock"
            android:layout_marginBottom="10dp"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUÊN\nMẬT KHẨU"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            ></TextView>
        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Nhập số điện thoại của bạn để thiết lập lại mật khẩu cho tài khoản"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginBottom="12dp"
            >
        </TextView>
        <EditText
            android:id="@+id/forgot_edit_name"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:hint="Tên đăng nhập"
            android:textSize="20sp"
            android:paddingStart="20dp"
            android:padding="14dp"
            android:drawableStart="@drawable/user"
            android:textColor="@color/black"
            android:drawablePadding="8dp"
            android:layout_marginTop="26dp"
            android:inputType="textEmailAddress"
            >
        </EditText>
        <EditText
            android:id="@+id/forgot_edit_phone"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:hint="Số điện thoại"
            android:textSize="20sp"
            android:paddingStart="20dp"
            android:padding="14dp"
            android:drawableStart="@drawable/icon_dienthoai"
            android:textColor="@color/black"
            android:drawablePadding="8dp"
            android:layout_marginTop="20dp"
            android:inputType="textEmailAddress"
            >
        </EditText>
        <Button
            android:id="@+id/forgot_btn_tieptuc"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="tiếp tục"
            android:textSize="20dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:background="@drawable/btn_login"
            android:layout_margin="18dp"
            android:textColor="@color/white">
        </Button>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/vang">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageButton
            android:id="@+id/main_btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_back"
            >
        </ImageButton>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center|top">
        <ImageView
            android:id="@+id/register_img"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/acc">
        </ImageView>
        <EditText
            android:id="@+id/register_txt_user"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:hint="Tên đăng nhập*"
            android:textSize="20sp"
            android:paddingStart="20dp"
            android:padding="14dp"
            android:drawableStart="@drawable/user"
            android:textColor="@color/black"
            android:drawablePadding="8dp"
            android:layout_marginTop="16dp"
            android:inputType="text"
            >
        </EditText>
        <EditText
            android:id="@+id/register_txt_pass"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:hint="Mật khẩu*"
            android:textSize="20sp"
            android:paddingStart="20dp"
            android:padding="14dp"
            android:drawableStart="@drawable/pass"
            android:textColor="@color/black"
            android:drawablePadding="8dp"
            android:layout_marginTop="16dp"
            android:inputType="textEmailAddress"
            >
        </EditText>

        <EditText
            android:id="@+id/register_txt_pass2"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:hint="Nhập lại mật khẩu*"
            android:textSize="20sp"
            android:paddingStart="20dp"
            android:padding="14dp"
            android:drawableStart="@drawable/pass"
            android:textColor="@color/black"
            android:drawablePadding="8dp"
            android:layout_marginTop="16dp"
            android:inputType="textPassword"
            >
        </EditText>
        <EditText
            android:id="@+id/register_txt_name"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:hint="Họ và tên"
            android:textSize="20sp"
            android:paddingStart="20dp"
            android:padding="14dp"
            android:drawableStart="@drawable/acc"
            android:textColor="@color/black"
            android:drawablePadding="8dp"
            android:layout_marginTop="16dp"
            >
        </EditText>
        <EditText
            android:id="@+id/register_txt_phone"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:hint="Số điện thoại*"
            android:textSize="20sp"
            android:paddingStart="20dp"
            android:padding="14dp"
            android:drawableStart="@drawable/icon_dienthoai"
            android:textColor="@color/black"
            android:drawablePadding="8dp"
            android:layout_marginTop="16dp"
            android:inputType="text"
            >
        </EditText>
        <Button
            android:id="@+id/register_btn_dangki"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:textSize="20dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:background="@drawable/btn_login"
            android:layout_marginTop="20dp"
            android:textColor="@color/white">
        </Button>
    </LinearLayout>
</LinearLayout>